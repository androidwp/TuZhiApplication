<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="item"
            type="com.tuzhi.application.moudle.memberlist.MemberListItem" />

        <variable
            name="data"
            type="com.tuzhi.application.bean.ItemBean" />

        <variable
            name="index"
            type="Integer" />
    </data>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/general_listview_selector">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/generalSpace"
            android:paddingRight="@dimen/generalSpace">

            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="@dimen/generalSpace"
                android:layout_marginTop="@dimen/generalSpace"
                android:scaleType="centerCrop"
                app:errorDrawable="@{@drawable/defaulthead}"
                app:imageLoad="@{data.image}"
                app:riv_corner_radius="20dp" />


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:text="@{data.name}"
                android:textColor="@color/colorText"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/tvChangeJurisdiction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:onClick="@{(view)->item.onItemClick(view,data)}"
                android:paddingBottom="@dimen/generalSpace"
                android:paddingTop="@dimen/generalSpace"
                android:text="@{data.text}"
                android:textColor="@{data.index==0?@color/colorTextHint:@color/color71b7fd}"
                android:textSize="14sp" />

        </LinearLayout>

        <View style="@style/NavigationLine" />
    </FrameLayout>
</layout>
