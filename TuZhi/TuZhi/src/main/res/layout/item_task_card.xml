<?xml version="1.0" encoding="utf-8"?>

<layout>

    <data>

        <variable
            name="item"
            type="com.tuzhi.application.moudle.createtask.TaskCardItem" />

        <variable
            name="data"
            type="com.tuzhi.application.bean.ItemBean" />

        <variable
            name="position"
            type="Integer" />
    </data>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/flTaskCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f7f8f9"
        android:onClick="@{(view)->item.onItemClick(view,data)}">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="11dp"
            android:paddingLeft="@dimen/generalSpace"
            android:paddingRight="@dimen/generalSpace"
            android:paddingTop="11dp">

            <ImageView
                android:id="@+id/iv"
                android:layout_width="32dp"
                android:layout_height="41dp"
                android:src="@drawable/note" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="41dp"
                android:layout_marginLeft="@dimen/generalSpace"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:text="@{data.title}" />


                <!--<LinearLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_gravity="bottom"-->
                <!--android:orientation="horizontal">-->

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@{data.time}"
                    android:textColor="#bdbdbd"
                    android:textSize="@dimen/generalSmallTextSize" />

                <!--<TextView-->
                <!--android:id="@+id/tvDownLoadStatus"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:textColor="@color/colorGeneralMoreTintText"-->
                <!--android:textSize="@dimen/generalSmallTextSize" />-->
                <!--</LinearLayout>-->
            </LinearLayout>

            <TextView
                android:id="@+id/tvRemove"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:onClick="@{(view)->item.onItemClick(view,position)}"
                android:text="移除关联"
                android:textColor="#ff395e"
                android:textSize="12sp" />
        </LinearLayout>
    </FrameLayout>
</layout>
