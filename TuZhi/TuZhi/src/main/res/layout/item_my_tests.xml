<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="data"
            type="com.tuzhi.application.moudle.mytasks.MyTasksItemBean" />

        <variable
            name="item"
            type="com.tuzhi.application.moudle.mytasks.MyTasksItem" />
    </data>

    <LinearLayout
        android:id="@+id/llTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/general_listview_selector"
        android:onClick="@{(view)->item.onItemClick(view,data)}"
        android:orientation="horizontal"
        android:paddingBottom="13dp"
        android:paddingLeft="@dimen/generalSpace"
        android:paddingRight="@dimen/generalSpace"
        android:paddingTop="13dp">

        <CheckBox
            android:id="@+id/cbFinishTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="@{data.checkStatue}"
            android:onCheckedChangeListener="@{(buttonView,isChecked)->item.onCheckedChanged(buttonView,isChecked)}" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/generalSpace"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@{data.content}" />

    </LinearLayout>
</layout>
