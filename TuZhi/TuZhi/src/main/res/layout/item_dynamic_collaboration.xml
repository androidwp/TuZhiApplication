<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="data"
            type="com.tuzhi.application.moudle.dynamiccollaboration.DynamicCollaborationItemBean" />

        <variable
            name="item"
            type="com.tuzhi.application.moudle.dynamiccollaboration.DynamicCollaborationItem" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/general_listview_selector"
        android:onClick="@{(view)->item.onItemClick(view,data)}">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/generalSpace">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:scaleType="centerCrop"
                    app:errorDrawable="@{@drawable/defaulthead}"
                    app:imageLoad="@{data.imageUrl}"
                    app:riv_corner_radius="13dp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/generalSpace"
                    android:text="@{data.nickName}"
                    android:textColor="@color/colorText" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/generalSpace"
                    android:layout_weight="1"
                    android:text="@{data.dynamic}"
                    android:textColor="@color/color71b7fd"
                    android:textSize="@dimen/generalSmallTextSize" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@{data.time}"
                    android:textColor="@color/colorTextHint"
                    android:textSize="@dimen/generalSmallTextSize" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/generalSpace"
                android:text="@{data.title}" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/generalSpace"
                android:background="@color/colorGeneralBackground"
                android:padding="5dp"
                android:text="@{data.position}"
                android:textColor="@color/colorGeneralMoreTintText"
                android:textSize="@dimen/generalSmallTextSize" />
        </LinearLayout>

        <View style="@style/NavigationLine" />

    </FrameLayout>
</layout>
