<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="item"
            type="com.tuzhi.application.moudle.repository.enterpriseknowledge.knowledgedetails.choosecolleague.item.ChooseCardItem" />

        <variable
            name="data"
            type="com.tuzhi.application.moudle.repository.enterpriseknowledge.knowledgedetails.choosecolleague.bean.ChooseColleagueItemBean" />

    </data>

    <LinearLayout
        android:id="@+id/llChooseCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/generalSpace"
        android:layout_marginLeft="@dimen/generalSpace"
        android:layout_marginRight="@dimen/generalSpace"
        android:background="@drawable/general_listview_selector_border"
        android:onClick="@{(view)->item.skip(view,data)}"
        android:orientation="vertical"
        android:padding="@dimen/generalSpace">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{data.title}"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:scaleType="centerCrop"
                android:src="@drawable/defaulthead"
                app:errorDrawable="@{@drawable/defaulthead}"
                app:imageLoad="@{data.portrait}"
                app:riv_corner_radius="12dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="贡献者"
                android:textColor="@color/colorGeneralTintText"
                android:textSize="12sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:text="@{data.time}"
                android:textColor="@color/colorGeneralTintText"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>
</layout>
