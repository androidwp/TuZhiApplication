<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="dialog"
            type="com.tuzhi.application.dialog.DeleteDialog" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_background"
        android:orientation="vertical"
        android:padding="@dimen/generalSpace">

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="提示"
            android:textSize="18sp" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/generalSpace"
            android:layout_marginTop="@dimen/generalSpace"
            android:textColor="@color/colorGeneralTintText"
            android:text="你确定要删除该文件吗，删除后将无法恢复？" />

        <LinearLayout
            android:layout_width="300dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="取消"
                android:textColor="@color/colorGeneralMoreTintText"
                android:gravity="center"
                android:onClick="@{()->dialog.cancel()}"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:onClick="@{()->dialog.delete()}"
                android:text="删除"
                android:textColor="@color/colorRedButton"
                android:gravity="center"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>
</layout>
