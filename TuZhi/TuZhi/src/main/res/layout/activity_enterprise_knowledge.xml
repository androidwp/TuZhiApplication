<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="activity"
            type="com.tuzhi.application.moudle.repository.enterpriseknowledge.mvp.EnterpriseKnowledgeActivity" />

        <variable
            name="flag"
            type="Boolean" />

        <variable
            name="isOpen"
            type="Boolean" />

        <import type="android.view.View" />
    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/navigationHeight"
            android:background="@color/colorNavigationBarBackground">

            <ImageView
                style="@style/NavigationLeftButton"
                android:onClick="@{()->activity.back()}" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/colorNavigationBarTitleText"
                android:textSize="@dimen/generalTextSize" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/navigationHeight"
                android:layout_gravity="right"
                android:layout_marginRight="50dp"
                android:background="@drawable/navigation_bar_click_effect"
                android:onClick="@{()->activity.skipMemberManagementActivity()}"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:scaleType="center"
                android:src="@drawable/member"
                android:visibility="@{isOpen?View.VISIBLE:View.GONE}" />

            <ImageView
                style="@style/NavigationRightButton"
                android:onClick="@{()->activity.openMenu()}"
                android:src="@drawable/more" />

            <View style="@style/NavigationLine" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/generalSpace"
            android:paddingRight="@dimen/generalSpace">

            <TextView
                android:id="@+id/tvTasksChange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:drawableRight="@{flag?@drawable/invertedorder:@drawable/positivese}"
                android:onClick="@{()->activity.sortChange(flag)}"
                android:paddingBottom="13dp"
                android:paddingTop="13dp"
                android:text="@{flag?@string/inOrderOfCreationTime:@string/reverseTheCreationTime}"
                android:textColor="@color/color71b7fd"
                android:textSize="13sp" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tvCreateTask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="@dimen/generalSpace"
                android:onClick="@{()->activity.skipCreateRepositoryActivity()}"
                android:paddingBottom="13dp"
                android:paddingTop="13dp"
                android:text="+ 新建卡片"
                android:textColor="@color/color71b7fd"
                android:textSize="11sp"
                android:textStyle="bold" />

        </LinearLayout>

        <com.tuzhi.application.view.RefreshRecycleView
            android:id="@+id/rrv"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</layout>
