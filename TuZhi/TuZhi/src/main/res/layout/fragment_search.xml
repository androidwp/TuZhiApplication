<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="fragment"
            type="com.tuzhi.application.moudle.search.mvp.SearchFragment" />

        <variable
            name="text"
            type="String" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/navigationHeight"
            android:background="@color/colorNavigationBarBackground"
            android:orientation="horizontal"
            android:paddingBottom="8dp"
            android:paddingLeft="@dimen/generalSpace"
            android:paddingTop="8dp">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/drawable_search_background"
                    android:drawableLeft="@drawable/searchbox"
                    android:drawablePadding="10dp"
                    android:imeOptions="actionSearch"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:text="@={text}"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/ivDelete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:onClick="@{()->fragment.deleteSearchText()}"
                    android:paddingRight="10dp"
                    android:src="@drawable/deletesearch"
                    android:visibility="gone" />

            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:onClick="@{()->fragment.search(text)}"
                android:paddingLeft="@dimen/generalSpace"
                android:paddingRight="@dimen/generalSpace"
                android:text="搜索"
                android:textColor="@color/colorWhite"
                android:textSize="18sp" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/llSearch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.flyco.tablayout.SlidingTabLayout
                    android:id="@+id/stl"
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:background="@color/colorNavigationBarBackground"
                    app:tl_indicator_color="@color/colorWhite"
                    app:tl_indicator_height="3dp"
                    app:tl_indicator_width_equal_title="true"
                    app:tl_tab_space_equal="true"
                    app:tl_textSelectColor="@color/colorWhite"
                    app:tl_textUnselectColor="@color/colorWhite"
                    app:tl_textsize="15dp" />

                <android.support.v4.view.ViewPager
                    android:id="@+id/vp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:background="@color/colorWhite"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/generalSpace"
                        android:text="没有找到你需要的知识内容？邀请同事贡献此内容"
                        android:textColor="#a4aab3"
                        android:textSize="12sp" />

                    <ImageView
                        android:layout_width="46dp"
                        android:layout_height="match_parent"
                        android:background="#71b7fd"
                        android:onClick="@{()->fragment.skipCreateTask()}"
                        android:scaleType="center"
                        android:src="@drawable/entertask" />
                </LinearLayout>

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorGeneralBackground" />

        </FrameLayout>
    </LinearLayout>
</layout>
