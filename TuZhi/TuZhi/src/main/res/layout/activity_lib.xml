<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="activity"
            type="com.tuzhi.application.moudle.knowledgelib.KnowledgeLibActivity" />

        <variable
            name="open"
            type="Boolean" />

        <import type="android.view.View" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/navigationHeight"
            android:background="@color/colorNavigationBarBackground">

            <ImageView
                style="@style/NavigationLeftButton"
                android:onClick="@{()->activity.back()}" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/generalTextSize" />

            <ImageView
                android:layout_width="@dimen/navigationHeight"
                android:layout_height="@dimen/navigationHeight"
                android:layout_gravity="right"
                android:layout_marginRight="40dp"
                android:background="@drawable/navigation_bar_click_effect"
                android:onClick="@{()->activity.skipMemberManagementActivity()}"
                android:paddingRight="10dp"
                android:scaleType="center"
                android:src="@drawable/add"
                android:visibility="@{open?View.GONE:View.VISIBLE}" />

            <ImageView
                style="@style/NavigationRightButton"
                android:onClick="@{()->activity.openMenu()}"
                android:src="@drawable/more" />

        </FrameLayout>


        <com.flyco.tablayout.SlidingTabLayout
            android:id="@+id/stl"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:background="@color/colorNavigationBarBackground"
            app:tl_indicator_color="@color/colorWhite"
            app:tl_indicator_height="3dp"
            app:tl_indicator_width_equal_title="true"
            app:tl_tab_space_equal="true"
            app:tl_textSelectColor="@color/colorWhite"
            app:tl_textUnselectColor="@color/colorWhite"
            app:tl_textsize="15dp" />

        <android.support.v4.view.ViewPager
            android:id="@+id/vp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>
</layout>
