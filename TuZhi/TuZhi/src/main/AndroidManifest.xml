<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tuzhi.application">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <service android:name=".service.UpdateService" />

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">

            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />

        </provider>

        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="UMENG_CHANNEL"
            android:value="官网" />

        <activity
            android:name=".moudle.repository.mvp.RepositoryActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".moudle.enterpriseknowledge.knowledgedetails.openfile.mvp.OpenFileActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".moudle.crepository.mvp.CrepositoryActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".moudle.enterpriseknowledge.mvp.EnterpriseKnowledgeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".moudle.mine.mvp.MineActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".moudle.mine.personalinformation.mvp.PersonalInformationActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".moudle.mine.personalinformation.bindingphoneoremailfirst.mvp.BindingPhoneOrEmailFirstActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".moudle.mine.personalinformation.bindingphoneoremailsecond.mvp.BindingPhoneOrEmailSecondActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".moudle.mine.problemfeedback.mvp.ProblemFeedbackActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".moudle.mine.setting.mvp.SettingActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".moudle.mine.setting.changepassword.mvp.ChangePasswordActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".moudle.mine.personalinformation.rename.mvp.RenameActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".moudle.enterpriseknowledge.knowledgedetails.mvp.KnowledgeDetailsActivity"
            android:windowSoftInputMode="adjustPan"
            android:screenOrientation="portrait" />

        <activity
            android:name=".moudle.enterpriseknowledge.knowledgedetails.publishtopicorcomment.mvp.PublishTopicOrCommentActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".moudle.enterpriseknowledge.knowledgedetails.commentlist.mvp.CommentListActivity"
            android:screenOrientation="portrait" />


        <activity
            android:name=".moudle.enterpriseknowledge.knowledgedetails.createdocument.mvp.CreateDocumentActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name=".moudle.login.mvp.LoginActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>